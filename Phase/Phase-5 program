  }
  input:focus {
    border-color: #007bff;
    outline: none;
  }
  .error {
    color: red;
    font-size: 14px;
  }
  button {
    background: #007bff;
    color: white;
    border: none;
    padding: 10px;
    width: 100%;
    border-radius: 6px;
    cursor: pointer;
    font-size: 16px;
